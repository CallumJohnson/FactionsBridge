        <!-- Improved Factions -->
        <dependency>
            <groupId>Factions</groupId>
            <artifactId>ImprovedFactions</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${factions.location}/ImprovedFactions.jar</systemPath>
