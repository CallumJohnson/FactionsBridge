        <!-- Home Extension for FactionHomes. -->
        <dependency>
            <groupId>HomeExtension</groupId>
            <artifactId>ImprovedFactions-Homes</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${factions.location}/HomeExtension.jar</systemPath>
